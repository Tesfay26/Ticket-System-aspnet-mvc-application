@*Define model which means that holds the list of Actors*@
@model IEnumerable<Actor>

@*Define ViewData which means like title and others*@
@{
	ViewData["Title"] = "List of Actors";
}

@*Write code*@

<div class="row">
	<div class="col-md-8 offset-2">
		<table class="table">
			<thead>
				<tr class="text-center">
					<th>@Html.DisplayNameFor(model => model.ProfilePicture)</th>
					<th>@Html.DisplayNameFor(model => model.FullName)</th>
					<th>@Html.DisplayNameFor(model => model.Biography)</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td class="align-middle">
							<img class="rounded-circle" src="@item.ProfilePicture" alt="@item.FullName" style="max-width:150px"/>
						</td>
						<td class="align-middle">
							@Html.DisplayFor(modelItem => item.FullName)
						</td>
						<td class="align-middle">
							@Html.DisplayFor(modelItem => item.Biography)
						</td>
						<td class="align-middle">
							<a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Edit</a> |
							<a class="btn btn-outline-info"><i class="bi bi-eye"></i>Detail</a> |
							<a class="btn btn-danger text-white"><i class="bi bi-trash"></i>Delete</a> 
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>

